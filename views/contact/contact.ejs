<%- include('../partials/header') -%>
<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto mt-5">
      <h1 class="text-center">Contact Us</h1>
      <form action="/contact" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="name"
            required
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="email"
            name="email"
            placeholder="email"
            required
          />
        </div>

        <div class="form-group">
          <textarea
            class="form-control"
            type="message"
            name="message"
            cols="30"
            rows="10"
            placeholder="message"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>
